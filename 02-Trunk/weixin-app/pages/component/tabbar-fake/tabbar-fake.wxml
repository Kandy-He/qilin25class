<!--pages/component/tabbar/tabbar.wxml-->
<view class='tab-items-box'>
  <view class='tab-items {{tabbarIndexInConp == 1?"active":""}}' data-href="index" bindtap="bindRedirectTap">
    <view>
      <image class='tab-items-images' src='{{tabbarIndexInConp == 1?"../../../images/index-choose.png":"../../../images/index-unchoose.png"}}'></image><!-- 引用的起点是当前组件 -->
    </view>
    <view>
      <text class='tab-items-text'>首页</text>
    </view>
  </view>
  <view class='tab-items {{tabbarIndexInConp == 2?"active":""}}' data-href="practice" bindtap="bindRedirectTap">
    <view>
      <image class='tab-items-images' src='{{tabbarIndexInConp == 2?"../../../images/practice-choose.png":"../../../images/practice-unchoose.png"}}'></image>
    </view>
    <view>
      <text class='tab-items-text'>练习</text>
    </view>
  </view>
  <view class='tab-items {{tabbarIndexInConp == 3?"active":""}}' data-href="test" bindtap="bindRedirectTap">
    <view>
      <image class='tab-items-images' src='{{tabbarIndexInConp == 3?"../../../images/test-choose.png":"../../../images/test-unchoose.png"}}'></image>
    </view>
    <view>
      <text class='tab-items-text'>测试</text>
    </view>
  </view>
  <view class='tab-items {{tabbarIndexInConp == 4?"active":""}}' data-href="my" bindtap="bindRedirectTap">
    <view>
      <image class='tab-items-images' src='{{tabbarIndexInConp == 4?"../../../images/my-choose.png":"../../../images/my-unchoose.png"}}'></image>
    </view>
    <view>
      <text class='tab-items-text'>我的</text>
    </view>
  </view>
</view>
