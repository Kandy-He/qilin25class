<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.grosup.practice.user">

	<resultMap type="com.grosup.practice.beans.UserBean" id="BaseResultMap">
		<result column="id" jdbcType="INTEGER" property="id"/>
		<result column="name" jdbcType="VARCHAR" property="name"/>
		<result column="classID" jdbcType="INTEGER" property="classID"/>
		<result column="icon" jdbcType="VARCHAR" property="icon"/>
		<result column="wxID" jdbcType="INTEGER" property="wxID"/>
		<result column="status" jdbcType="VARCHAR" property="status"/>
	</resultMap>
	
	<insert id="userAdd" parameterType="com.grosup.practice.beans.UserBean">
		insert into t_student (name,classID,icon,wxID,status,userType) values (#{name},#{classID},#{icon},#{wxID},#{status},#{userType})
	</insert>
	
	<!-- 通过wxID即unionID获取用户信息 -->
	<select id="queryUserByUnionId" resultMap="BaseResultMap">
		select * from t_student where wxID = #{unionID}
	</select>
	
	<!-- 获取老师对应班级下未注册的学生信息 -->
	<!-- param：老师ID -->
	<select id="queryUserUnChecked" parameterType="INTEGER">
		select * from (select * from t_student ts where ts.status = 0 and ts.userType = 0) as a
		where a.classID = (select classID from t_student where id = #{userID})
	</select>
	
	<!-- 将注册的状态由0变为1 -->
	<update id="userCheck" parameterType="INTEGER">
		update t_student set t_student.status = 1 where id = #{userID}
	</update>
	
	<!-- 通过wxID即unionID获取用户信息 -->
	<select id="queryUserBywxID" resultMap="BaseResultMap">
		select * from t_student where wxID = #{wxID}
	</select>
</mapper>